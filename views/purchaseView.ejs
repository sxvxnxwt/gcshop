<% if(cls === 'MNG') { %>
<table class="table table-bordered " style="text-align: center;">
    <thead>
        <th>고객ID</th><th>고객명</th><th>상품ID</th><th>상품명</th><th>구매일</th><th>가격</th><th>포인트</th><th>구매량</th><th>총가격</th><th>지불여부</th><th>취소여부</th><th>환불여부</th><th colspan="2"></th>

    </thead>
    <% var k = 0;
        while(k<purchase.length) { %>
    <tr>
    <td><%=purchase[k].loginid%></td>
    <td><%=purchase[k].personname%></td>
    <td><%=purchase[k].mer_id%></td>
    <td><%=purchase[k].productname%></td>
    <td><%=purchase[k].date%></td>
    <td><%=purchase[k].price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%>원</td>
    <td><%=purchase[k].point%></td>
    <td><%=purchase[k].qty%></td>
    <td><%=purchase[k].total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%>원</td>
    <td><%=purchase[k].payYN%></td>
    <td><%=purchase[k].cancel%></td>
    <td><%=purchase[k].refund%></td>
    
    <td><a href="/purchaseupdate/<%=purchase[k].purchase_id%>" style="text-decoration: none;">수정</a></td>
    <td><a href="/purchasedelete_process/<%=purchase[k].purchase_id%>" style="text-decoration: none;" onclick="if(confirm('정말로 삭제하시겠습니까?')==false) return false">삭제</a></td>
    </tr>
    <% k++; } %>

</table>

<% if(purchase.length === 0) { %>
    <p>자료가 없습니다. </p>
<% } %>

<% } else { %>
    <script>
        alert('관리자만 이용 가능합니다.');
        window.location.href='/';
    </script>
<% } %>